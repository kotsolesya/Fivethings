<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    tools:context="com.example.olesya.fivethings.SecondThingActivity">

    <TextView
        android:id="@+id/title_thing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="@string/second_thing"
        android:textSize="24sp" />
    <ImageView
        android:id="@+id/img_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_thing"
        android:paddingBottom="12dp"
        android:src="@drawable/community" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/liner_layout_five_button"
        android:layout_below="@+id/img_2"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextDescription"
                android:text="Як тільки є питання, необхідно до когось звернутися" />

            <View style="@style/Divider" />
            <TextView
                style="@style/TextDescription"
                android:text="Мені тут допомагають:" />
            <TextView
                style="@style/TextDescription"
                android:text="Google i Youtube, в яких я шукаю не тільки готові рішення, а я пояснення чому саме так." />
            <View style="@style/Divider" />
            <TextView
                style="@style/TextDescription"
                android:text="Канали Youtube : loftblog, Magisters | Обучение современным профессиям, thenewboston, ну або ж можна погуглить на тему яку цікавить " />
            <TextView
                style="@style/TextDescription"
                android:text="Звичайно ж форуми, такі як stackoverflow.com " />

            <View style="@style/Divider" />

            <TextView
                style="@style/TextDescription"
                android:text="Також корисно проходити онлайн курси, уроки, які навіть в дорозі на телефоні можна проходити. " />

            <View style="@style/Divider" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/liner_layout_five_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_first_thing"
            style="@style/ButtonThing"
            android:text="#1" />

        <Button
            android:id="@+id/btn_second_thing"
            style="@style/ButtonThing"
            android:text="#2" />

        <Button
            android:id="@+id/btn_three_thing"
            style="@style/ButtonThing"
            android:text="#3" />

        <Button
            android:id="@+id/btn_four_thing"
            style="@style/ButtonThing"
            android:text="#4" />

        <Button
            android:id="@+id/btn_five_thing"
            style="@style/ButtonThing"
            android:text="#5" />
    </LinearLayout>


</RelativeLayout>